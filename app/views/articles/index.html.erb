<% content_for(:meta_title, "Blog") %>

<div class="container mt-5 blog">
  <div class="row justify-content-center">
    <div class="col-lg-12">
      <div class="text-center mb-5">
        <h2>Blog Posts</h2>
        <p class="text-muted mx-auto section-subtitle mt-3">Tehnology articles written by me. Also available on <u><%= link_to "Medium", "https://medium.com/@guilpejon", target: "_blank" %></u>.</p>
      </div>
    </div>
  </div>
  <div class="row">
    <% @articles.each do |article| %>
      <div class="col-sm-6 col-md-4 mb-3 d-flex align-items-stretch">
        <div class="card">
          <div class="item">
            <div class="post-img">
              <div class="img">
                <%= link_to article_path(article.slug), "data-turbolinks": "false" do %>
                  <%= image_tag(article.thumbnail.variant(resize_to_fill: [350, 0]), class: 'card-img-top') %>
                <% end %>
              </div>
            </div>
            <div class="card-body">
              <div class="cont">
                <div class="info">
                  <span class="float-left"><%= article.published_at.day %> <%= article.published_at.strftime("%b, %Y") %></span>
                  <%# <a href="#0"><span>06</span> Aug 2018</a> %>
                  <%# <a href="#0"><i class="icon pe-7s-ticket"></i> WordPress</a> %>
                </div>
                <h5><%= link_to article.title, article_path(article.slug), "data-turbolinks": "false" %></h5>
                <%# <a href="#0"><%= article.description %1></a> %>
                <%# <a href="#0" class="more"> %>
                  <%#   <span>Read More</span> %>
                  <%# </a> %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
