<div class="modal fade" id="storeModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Paintings</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= image_tag(image_path('painting.webp'), class: "w-100") %>
      </div>
      <div class="modal-footer">
        <%= link_to "Brazil", "https://www.topquadros.com.br/guilherme-pejon", class: "btn btn-primary", target: "_blank", title: "Paintings for Sale" %>
        <%= link_to "Worldwide", "https://www.inprnt.com/canvas/guilpejon/", class: "btn btn-info", target: "_blank", title: "Paintings for Sale" %>
      </div>
    </div>
  </div>
</div>
