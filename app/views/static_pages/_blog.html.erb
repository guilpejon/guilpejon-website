<section class="section text-center blog section-padding bg-gray" data-scroll-index="7">
  <div class="container">
    <div class="row justify-content-center mb-5">
      <div class="col-lg-12">
        <div class="text-center">
          <h2>Latest Posts</h2>
          <%# <p class="text-muted mx-auto section-subtitle mt-3">You can download the images below to use as wallpapers.<br> Alternatively, you can buy some of them as canvas <a href="#"><u>here</u></a>.</p> %>
        </div>
      </div>
    </div>

    <div class="card-deck">
      <% @articles.each do |article| %>
        <div class="card">
          <div class="item">
            <div class="post-img">
              <div class="img">
                <%= link_to article_path(article.slug), "data-turbolinks": "false" do %>
                  <%= image_tag(article.thumbnail.variant(resize_to_fill: [400, 0]), class: 'card-img-top') %>
                <% end %>
              </div>
            </div>
            <div class="card-body">
              <div class="cont">
                <div class="info">
                  <span><em>By</em> Guilherme Pejon</span>
                  <span><%= article.published_at.day %> <%= article.published_at.strftime("%b, %Y") %></span>
                  <%# <a href="#0"><span>06</span> Aug 2018</a> %>
                  <%# <a href="#0"><i class="icon pe-7s-ticket"></i> WordPress</a> %>
                </div>
                <h5><%= link_to article.title, article_path(article.slug), "data-turbolinks": "false" %></h5>
                <%# <a href="#0"><%= article.description %1></a> %>
                <%# <a href="#0" class="more"> %>
                  <%#   <span>Read More</span> %>
                  <%# </a> %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
