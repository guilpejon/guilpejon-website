<section class="section text-center" id="projects">
  <div class="container">
    <div class="row justify-content-center mb-5">
      <div class="col-lg-12">
        <div class="text-center">
          <h2>Projects</h2>
          <p class="text-muted mx-auto section-subtitle mt-3">Some of my personal projects.</p>
        </div>
      </div>
    </div>
    <div class="row">
      <% @projects.each do |project| %>
        <%= link_to url_for(project.thumbnail.variant(resize_to_fill: [801,0])), class: "col-6 col-sm-6 col-lg-3 col-md-3 grid-item", data: { toggle: "lightbox", gallery: "projects-gallery", footer: "#{render partial: 'static_pages/projects_modal', locals: { project: project }}" } do %>
          <%= image_tag(project.thumbnail.variant(resize_to_fill: [270, 270]), class: " img-thumbnail") %>
          <div class="gallery-image-item-overlay"></div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
